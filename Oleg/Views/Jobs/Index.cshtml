@model IEnumerable<Oleg.Models.Job>

@{
    ViewBag.Title = "Index";
}
<div class="content">
 <div class="row">
     
     <div class="col-lg-11 contentMargine">
<h1>Вакансії</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Factory.FactoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobRequirements)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobDuties)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobConditions)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        string link = "/Jobs/Index?num=" + @item.FactoryId.ToString();
        <tr>
            <td>
                <a href="@link">@Html.DisplayFor(modelItem => item.Factory.FactoryName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobRequirements)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobDuties)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobConditions)
            </td>
            @if (TempData.Peek("_UserRole") as string == "Admin")
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.JobId }) |
            @Html.ActionLink("Details", "Details", new { id = item.JobId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.JobId })
                </td>
            }
        </tr>
    }

</table>
</div>
     </div>
    </div>