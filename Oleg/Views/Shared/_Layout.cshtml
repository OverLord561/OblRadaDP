<!DOCTYPE html>
<html lang="ua">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    @if (IsSectionDefined("Owl"))
    {
        @RenderSection("Owl") 
    }
    
@*Відповідає за стиль таймпікер*@
    <link rel="stylesheet" type="text/css" href="~/Content/js/jquery.datetimepicker.css" />
    <style type="text/css">
        .custom-date-style {
            background-color: red !important;
        }

        .input {
        }

        .input-wide {
            width: 500px;
        }
    </style>
    @*Відповідає за таймпікер*@
</head>
<body>
    <div class="container-fluid container-margin">
        <header>
            <div class="row">
                <div class="row">
                    <div class="col-lg-2">
                        <a href="/Home/Index">
                            <img src="~/Images/oda_gerb.png"></a>
                    </div>
                    <div class="col-lg-5"><h2>Дніпропетровська обласна рада</h2></div>
                    <div class="col-lg-3"><img style="margin-left:35px; margin-top:15px;" src="~/Images/logo.png"></div>
                    <div class="col-lg-2">
                        <section id="login">
                            @Html.Partial("_LoginPartial")
                        </section>
                    </div>
                </div>
                <div class="row">
                        <div class="navbar navbar-default margin-0" role="navigation">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Головна", "Index", "Home")</li>
                                
                                <li>@Html.ActionLink("Керівництво", "Index", "Leaderships")</li>
                                <li>@Html.ActionLink("Бюджет", "Index", "Outlaies")</li>                                
                                <li>@Html.ActionLink("Фірми", "Index", "Factories")</li>
                                <li>@Html.ActionLink("Вакансії", "Index", "Jobs")</li>
                                <li>@Html.ActionLink("О программе", "About", "Home")</li>
                                <li>@Html.ActionLink("Контакти", "Contact", "Home")</li>
                                 @if (TempData.Peek("_UserRole") as string == "Admin")
                                 {
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="/Home/AdminPanel">Адміністратору<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Панель адміністратора", "AdminPanel", "Home")</li>
                                        <li>@Html.ActionLink("Коментарі користувачів", "Index", "UserComments")</li>
                                        <li>@Html.ActionLink("Видалити користувача", "DeleteUser", "Home")</li>
                                        <li>@Html.ActionLink("Керівництво", "Index", "Leaderships")</li>
                                        <li>@Html.ActionLink("Бюджет", "Index", "Outlaies")</li>
                                        <li>@Html.ActionLink("Фірми", "Index", "Factories")</li>
                                        <li>@Html.ActionLink("Вакансії", "Index", "Jobs")</li>
                                    </ul>
                                </li>
                                 }
                            </ul>
                        </div>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year — приложение ASP.NET MVC</p>
            </div>
        </div>
    </footer>
    
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
@if (IsSectionDefined("Picker"))
{
    @RenderSection("Picker") 
}
</html>
